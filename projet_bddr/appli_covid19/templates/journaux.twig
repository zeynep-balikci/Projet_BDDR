{% extends 'base.twig' %}

{% block content %}
<h3>La liste des journaux</h3>

<p> Il y a en tout {{ nb_total_journaux }} journaux. </p>

<ol type="1">
    {% for j in journaux %}
      <li id="li2"><a class='test external' href="/appli_covid19/journaux/{{ j.name }}">{{ j.name }}</a></li>
    {% endfor %}
</ol>

<div class="pagination">
    <span class="step-links">
        {% if journaux.has_previous %}
            <input type="button" onclick="window.location.href = '?page=1';" value="<<"/>
            <input type="button" onclick="window.location.href = '?page={{ journaux.previous_page_number }}';" value="prÃ©cedent"/>
        {% endif %}

        <span class="current">
            Page {{ journaux.number }}/{{ journaux.paginator.num_pages }}
        </span>

        {% if journaux.has_next %}
            <input type="button" onclick="window.location.href = '?page={{ journaux.next_page_number }}';" value="suivant"/>
            <input type="button" onclick="window.location.href = '?page={{ journaux.paginator.num_pages }}';" value=">>"/>
        {% endif %}
    </span>
</div>
{% endblock %}
