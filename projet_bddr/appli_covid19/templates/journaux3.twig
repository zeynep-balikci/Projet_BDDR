{% extends 'base.twig' %}

{% block content %}
<h3>Recherche</h3>
  
<form method="POST">
{% csrf_token %}
<p>
<label for="username"> Nom d'un journal </label>
<input id="username" type="text" name="username">
<button type="submit">Rechercher</button></p>
</form>

{% if username is not null and username != "" %}
<p>Voici les journaux qui contiennent "{{ username }}" dans leur nom. </p>
<ol type="1">
    {% for j in journaux %}
      <li id="li2"><a class='test external' href="/appli_covid19/journaux/{{ j.name }}">{{ j.name }}</a></li>
    {% endfor %}
</ol>

{% endif %}
{% endblock %}
